<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/quantum_white_text</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background_70</item>
        <item name="android:statusBarColor">@color/background_70</item>
        <item name="android:windowLightStatusBar">@bool/isLightBackgroundStatusBar</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/background</item>
        <item name="android:tint">@color/colorOnBackground</item>
        <item name="iconTint">@color/colorOnBackground</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="TodayDate" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="WhatsOn" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Day" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Body1.Focus" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/opensanssemi</item>
        <item name="fontWeight">700</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/open_sans</item>
    </style>

</resources>
