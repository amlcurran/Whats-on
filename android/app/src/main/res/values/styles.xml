<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#3ad970</item>
        <item name="colorPrimaryVariant">#2DA655</item>
        <item name="colorPrimaryDark">#edf1f5</item>
        <item name="colorSecondary">#44526c</item>
        <item name="colorOnBackground">#bac2c7</item>
        <item name="colorOnSurface">?colorSecondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:colorControlNormal">?attr/colorSecondary</item>
    </style>

    <color name="background">#edf1f5</color>

</resources>
