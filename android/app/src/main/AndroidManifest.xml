<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uk.co.amlcurran.social">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/AppTheme">

        <activity android:name=".WhatsOnActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".TimePickerActivity"
                android:parentActivityName=".WhatsOnActivity"
                android:label="@string/pick_times">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".WhatsOnActivity"/>

        </activity>
        <activity android:name=".EventDetailActivity" />

    </application>

</manifest>
