<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.amlcurran.social">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:theme="@style/AppTheme">

        <activity android:name=".WhatsOnActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TimePickerActivity"
            android:label="@string/pick_times"
            android:parentActivityName=".WhatsOnActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WhatsOnActivity" />

        </activity>
        <activity android:name=".details.EventDetailActivity" />

    </application>
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />

</manifest>
